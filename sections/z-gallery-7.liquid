    }
  </style>
{% endif %}


{% if image_ratio_mobile == "portrait" %}
  <style>
    .gallery-image-{{ section.id }} {
     aspect-ratio: 9.6/14; 
    }
  </style>
{% elsif image_ratio_mobile == "landscape" %}
  <style>
    .gallery-image-{{ section.id }}{
      aspect-ratio: 12/9; 
    }
  </style>
{% elsif image_ratio_mobile == "square" %}
  <style>
    .gallery-image-{{ section.id }} {
      aspect-ratio: 12/12; 
    }
  </style>
{% else %}
  <style>
    .gallery-image-{{ section.id }} {
      aspect-ratio: auto; 
    }
  </style>
{% endif %}

{% if image_ratio == "portrait" %}
  <style>
    @media(min-width: 1024px) {
     .gallery-image-{{ section.id }} {
        aspect-ratio: 9.6/14; 
      } 
    }
  </style>
{% elsif image_ratio == "landscape" %}
  <style>
    @media(min-width: 1024px) {
      .gallery-image-{{ section.id }}{
        aspect-ratio: 12/9; 
      }
    }
  </style>
{% elsif image_ratio == "square" %}
  <style>
    @media(min-width: 1024px) {
      .gallery-image-{{ section.id }} {
        aspect-ratio: 12/12; 
      }
    }
  </style>
{% else %}
  <style>
    @media(min-width: 1024px) {
      .gallery-image-{{ section.id }} {
        aspect-ratio: auto; 
      }
    }
  </style>
{% endif %}

{% for block in section.blocks %}
  <style>
    .gallery-card-{{ block.id }} {
      transform: rotate({{ block.settings.rotate }}deg);
    }

    @media(min-width: 1024px) {      
      .gallery-card-{{ block.id }}:hover {
        transform: scale(1.05) rotate({{ block.settings.rotate }}deg);
        z-index: 1;
        transition: all 0.25s ease 0s;
      }
    }
  </style>
{% endfor %}

{% if card_use_shadow %} 
  <style>
    .gallery-card-{{ section.id }} {
      box-shadow: 0 2px 4px #0000001a, inset 0 0 1px -1px #0000001a;
    }
    
    .gallery-card-{{ section.id }}:hover {
      box-shadow: 0 12px 24px #0000000d, 0 2px 4px #0000001a, inset 0 0 1px -1px #0000001a;
    }
  </style>
{% endif %}


<div class="section-{{ section.id }} gallery-{{ section.id }}" style="background-color:{{ background_color }}; background-image: {{ background_gradient }};">
    <div class="section-{{ section.id }}-settings">
      <div class="gallery-cards-{{ section.id }}">
        {% for block in section.blocks %}
          <{% if block.settings.url != blank %}a href="{{ block.settings.url }}"{% else %}div{% endif %} class="gallery-card-{{ section.id }} gallery-card-{{ block.id }}">
            <div class="gallery-image-{{ section.id }}">
              {% if block.settings.image != blank %}
                <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt }}" {% if lazy %}loading="lazy"{% endif %}>
              {% else %}
                {{ 'image' | placeholder_svg_tag }}
              {% endif %}
            </div>
            {% if block.settings.title != blank %}
              <h3 class="gallery-title-{{ section.id }}">{{ block.settings.title }}</h3>
            {% endif %}
            {% if block.settings.text != blank %}
              <div class="gallery-text-{{ section.id }}">{{ block.settings.text }}</div>
            {% endif %}
          </{% if block.settings.url != blank %}a{% else %}div{% endif %}>
        {% endfor %}
      </div>
    </div>
</div>

