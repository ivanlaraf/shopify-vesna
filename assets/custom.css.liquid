.m-select-custom--plain .m-select-custom--options {
    padding: 20px 25px;
    line-height: 2.2 !important;
}

.h3 {
    line-height: 2 !important;
}


.template-collection {
  overflow: visible !important;
}

.m-cart-count, .m-wishlist-count {
    font-size: 10px !important;
    height: 18px !important;
    min-width: 18px !important;
    width: 18px !important;
    top: auto !important;
    bottom: 4px !important;
    right: 5px !important;
    border: 2px solid #fff !important;
}


.m-mobile-sticky-bar--item .m-cart-count-bubble, .m-mobile-sticky-bar--wishlist .m-wishlist-count, .m-mobile-sticky-bar--wishlist .m-compare-count {
    font-size: 10px !important;
    height: 18px !important;
    min-width: 18px !important;
    width: 18px !important;
    top: auto !important;
    bottom: -8px !important;
    right: -8px !important;
    border: 2px solid #fff !important;
}

.m-wishlist-count {
    top: auto !important;
    bottom: 10px !important;
    right: 5px !important;
}

.m-header header {
    border-bottom: 1px solid #ddd !important;
}

.m-collection-page-header m-collection-header {
    padding-top: 20px !important;
}

.m-collection-page-header .m-breadcrumb {
    margin-top: 0 !important;
}

.spro-col {
    margin: 10px !important;
}

.m-product-tabs--horizontal .m-tab-header {
    margin-inline-start: 0 !important;
    margin-inline-end: 48px !important;
}


h2 strong {
  font-size: 3.5rem !important;
}

.m-collection-products .m-product-item {
  padding: 0 2px !important;
}

.m-section__header {
    margin-bottom: 30px !important;
}



:dir(rtl) .m-newsletter-form__button {
    right: auto;
    left: 0;
}

.m-menu__item--mega .m-sub-menu__item--level-1>.m-menu__link, .m-mega-collection-list .m-collection-card__link, .m-mega-collection-list .m-collection-card__title,
.m-menu-mobile__item, .m-menu-mobile__back-button, .m-product-tabs--horizontal .m-tab-header {
    text-transform: uppercase !important;
}

.m-mega-collection-list .m-collection-card__link, .m-mega-collection-list .m-collection-card__title {
    text-align: center !important;
}

.m-submenu-mobile .m-menu-mobile__item--no-submenu {
    text-transform: none !important;
}

h2, .h2 {
    line-height: 2 !important;
}

.m-contact-form {
    margin-top: 0 !important;
    margin-bottom: 0 !important;
}

