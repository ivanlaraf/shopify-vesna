


.m-collection-page-header--small {
  padding: 0 !important;
}

@media screen and (min-width: 1024px) {
    .m-header .m-cart-icon-bubble {
        margin-right: 20px !important;
    }
}

@media screen and (min-width: 1024px) {
    .m-collection-page-header__title {
        font-size: 28px !important;
    }
}
